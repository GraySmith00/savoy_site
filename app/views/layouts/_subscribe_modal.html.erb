<!-- MODAL
====================================== -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="whole-modal">
    
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-envelope"></i> Join the SAVOY Crew</h4>
      </div>
      
      <div class="modal-body">
        <p>Enter your email and take out out the social media middle man, you will be the first to know what's good with SAVOY!</p>
        
        
        <%= form_for @user, :html => { :multipart => true } do |f| %>
<!--         <form class="form-inline" role="form"> -->
          
          <div class="form-group">
            <label class="sr-only" for="subscribe-name">First Name</label>
            <%= f.text_field :name, class: 'form-control', id: "subscribe-email", placeholder: "First Name" %>
          </div><!-- form-group -->
          
          <div class="form-group">
            <label class="sr-only" for="subscribe-email">Email</label>
            <%= f.text_field :email, class: 'form-control', id: "subscribe-email", placeholder: "Email" %>
          </div><!-- form-group -->
          
        <%= f.submit "Enter", class: "btn btn-danger" %>
          <br><br>
          <p><small>By providing your email you consent to receiving occasional emails &amp; newsletters from Savoy. No Spam. Just the goods. We respect your privacy &amp; you can unsubscribe at any time.</small></p>
          
<!--         </form> -->
        <% end %>
      </div>
        
      </div>
      
    </div>
  </div>
</div>
