<!--CAROUSEL -->
   
<section id="carousel">
  <div id="myCarousel" class="carousel slide">
    
    <div class="carousel-inner">
      <div class="active item">
        <%= image_tag "IMGP6175.jpg" %>
      </div>
      <div class="item">
        <%= image_tag "IMGP6653.jpg" %>
      </div>
    </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>
    
  </div>
</section>

<!-- ==== LEAVING YOU ==== -->

<section id="leaving-you">
  <div class="container">
    <div class="row">
          <div class="col-sm-4">
            <div class="leaving-you-text">
              <h4>New Single - Leaving You</h4>
              <p>Out Now!</p>
            </div>
          </div>
          <div class="col-sm-8">
            <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/200644145&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
          </div>
       
    </div>
  </div>
</section>

<!-- MAILING LIST -->
<section id="mailing-list">
  <div class="container">
    <div class="row">
      
      <div class="col-sm-8">
        <p class="lead"><strong>Subscribe to the SAVOY mailing list.</strong> You will be the first to know about new music and live shows.</p>
      </div>

      <div class="col-sm-4">
        <button class="btn btn-mailing btn-lg btn-block" data-toggle="modal" data-target="#myModal">
          Click here to subscribe
        </button>
      </div>
      
    </div>
  </div>
</section>

<!-- TOUR DATES -->
<section id="savoy-live">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
          <h2>SAVOY LIVE</h2>
            
